.chart {
    width: 100%;
    height: 100px;
    border: 0px;
    display: flex;
    overflow: hidden; /* Hide overflow content */
    background-color:#AA336A;
}

.bar {
    flex:1;
    background-color: #ffffff;
    color: rgb(0, 0, 0);
    text-align: center;
    line-height: 200px; /* Center text vertically */
    transition: height 0.5s ease; /* Smooth transition for height changes */
}
